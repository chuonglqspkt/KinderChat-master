<Page
    x:Class="KinderChat_UAP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KinderChat_UAP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Button Content="Change Avatar" Click="ChangeAvatar_OnClick"></Button>
            <Button Content="Change Nickname" Click="ChangeNickname_OnClick"></Button>
            <Button Content="Get User Email" Click="GetUser_OnClick"></Button>
            <Button Content="Change Avatar Via Id" Click="ChangeAvatarViaId_OnClick"></Button>
        </StackPanel>
    </Grid>
</Page>
